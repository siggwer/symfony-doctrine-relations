{{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form._token) }}
    {{ form_row(form.name) }}
    {{ form_row(form.tags) }}


    <div class="form-group">
        <label for="foo_bars" class="d-flex justify-content-between">
            Bars :
            <button type="button" class="btn btn-outline-info add-bar">Add bar</button>
        </label>
        <div id="foo_bars"
             class="row"
             data-index="{{ form.bars|length > 0 ? form.bars|last.vars.name + 1 : 0 }}"
             data-prototype="{{ include('foo/_bar.html.twig', { form: form.bars.vars.prototype })|e('html_attr') }}"
        >
            {% for bar in form.bars %}
                {{ include('foo/_bar.html.twig', { form: bar }) }}
            {% endfor %}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn btn-success">Save</button>
    </div>
{{ form_end(form, { render_rest: false }) }}
